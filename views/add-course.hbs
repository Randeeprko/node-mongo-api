<div class= "container">
    <h2 class="text-primary text-center">Add Course Form</h2>
<form action ="/course/add" method="post">
        <div class="form-group">
        <label for="cId">Course Id</label> 
        <input type="text" name= "courseId" id="cId" value="" class= "form-control" placeholder="e.g. 3"/>
        </div>
        <div class="form-group">
           <label>Course Name</label>
           <input type="text" name= "courseName"  value="" class="form-control" placeholder="e.g. JS tutorial"/>
        </div>
        <div class="form-group">
           <label>Course Duration</label> 
           <input type= "text" name= "courseDuration" value="" class="form-control" placeholder="e.g. 2 hour"/>
        </div>
        <div class="form-group">
           <label>Course Fee</label>
           <input type="text" name = "courseFee" value="" class= "form-control" placeholder="e.g. 500 rs"/>
        </div>
        
        <button type="submit" class="btn btn-primary"> Add Course</button>
</form>
</div>